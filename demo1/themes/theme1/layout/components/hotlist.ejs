<div class="hot-list">
    <div class="f14 hot-list-title">热门文章</div>
    <ul>
        <% page.posts.sort(function(a, b){
            return b.views - a.views;
        }).slice(0, 5).forEach(function(post){ %>
            <li>
                <a href="<%- url_for(post.path) %>"><%= post.title %></a>
                <p><%= date(post.date, 'YYYY-MM-DD') %></p>
            </li>
        <% }) %>
    </ul>
</div>